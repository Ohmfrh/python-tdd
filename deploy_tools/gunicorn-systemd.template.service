[unit]
Description=Gunicorn server for SITENAME

[Service]
Restart=on-failure
User=rlogin
Group=www-data
WorkingDirectory=/home/rlogin/sites/SITENAME/source
ExecStart=/home/rlogin/sites/SITENAME/virtualenv/bin/gunicorn \
    --bind unix:/tmp/SITENAME.socket \
    --capture-output \
    --access-logfile ../access.log \
    --error-logfile ../error.log \
    superlists.wsgi:application

[Install]
WantedBy=multi-user.target
